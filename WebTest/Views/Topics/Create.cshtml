@model WebTest.Models.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Topic</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <h6 class="control-label col-md-2"><b>ID</b></h6>
    <div class="col-md-10">
        @Html.EditorFor(model => model.topicId, new { htmlAttributes = new { @class = "form-control col-md-5" } })
        @Html.ValidationMessageFor(model => model.topicId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <h6 class="control-label col-md-2"><b>Name</b></h6>
    <div class="col-md-10">
        @Html.EditorFor(model => model.topicName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
        @Html.ValidationMessageFor(model => model.topicName, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <h6 class="control-label col-md-2"><b>Description</b></h6>
    <div class="col-md-10">
        @Html.EditorFor(model => model.topicDisciption, new { htmlAttributes = new { @class = "form-control col-md-5" } })
        @Html.ValidationMessageFor(model => model.topicDisciption, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-block btn-primary col-md-2">Create</button>
        </div>
    </div>
</div>
}

