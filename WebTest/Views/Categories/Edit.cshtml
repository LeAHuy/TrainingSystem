@model WebTest.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    <h6 class="control-label col-md-2"><b>ID</b></h6>
    <div class="col-md-10">
        @Html.EditorFor(model => model.catId, new { htmlAttributes = new { @class = "form-control col-md-5", @Readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.catId, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <h6 class="control-label col-md-2"><b>Name</b></h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.catName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
            @Html.ValidationMessageFor(model => model.catName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6 class="control-label col-md-2"><b>Description</b></h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.catDisciption, new { htmlAttributes = new { @class = "form-control col-md-5" } })
            @Html.ValidationMessageFor(model => model.catDisciption, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-block btn-primary col-md-2">Save</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
